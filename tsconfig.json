{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@helpers/*": ["src/common/helpers/*"],
      "@constants/*": ["src/common/constants/*"],
      "@dto/*": ["src/common/dto/*"],
      "@config/*": ["src/config/*"],
      "@db/*": ["src/db/*"],
      "@decorators/*": ["src/decorators/*"],
      "@filters/*": ["src/filters/*"],
      "@guards/*": ["src/guards/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@modules/*": ["src/modules/*"],
      "@custom_types/*": ["src/types/*"],
      "@test/*": ["test/*"]
    }
  }
}
